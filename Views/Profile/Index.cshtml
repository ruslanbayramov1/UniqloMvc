@model ProfileUpdateVM
@{
    ViewData["Title"] = "User Profile";
}

@section style {
    <style>
        .card {
    background-color: #fff;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.card-body {
    padding: 30px;
}

h2 {
    font-size: 2rem;
    font-weight: 600;
    color: #333;
}

p {
    color: #777;
}

.mb-3 {
    margin-bottom: 20px;
}

img {
    border: 5px solid #fff;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}

.form-control {
    border-radius: 8px;
    padding: 10px;
}

button {
    border-radius: 8px;
    padding: 12px;
    font-size: 1rem;
    font-weight: 600;
}

button:hover {
    background-color: #0056b3;
}

.card-body .text-center {
    margin-bottom: 20px;
}

.card-body .text-center img {
    border-radius: 50%;
}
    </style>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ3Q3L4j27k7eX6ggfj8VvH0zGz0pHynB0se+K5lXXxz5f0d5XaUrm4Um5wr" crossorigin="anonymous">
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <!-- Profile Image -->
                        <div class="text-center">
                            <img src="@ViewBag.ProfileUrl" class="rounded-circle img-fluid" alt="Profile Image" style="width: 150px; height: 150px; object-fit: cover;">
                            <h2 class="mt-3"></h2>
                            <p></p>
                        </div>

                        <!-- Edit Profile Form -->
                        <form  action="UpdateProfile" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="Fullname" class="form-label">Full Name</label>
                                <input class="form-control" asp-for="Fullname" />
                            </div>

                            <div class="mb-3">
                                <label for="UserName" class="form-label">Username</label>
                                <input class="form-control" asp-for="Username" />
                            </div>

                            <div class="mb-3">
                                <label for="ProfileImage" class="form-label">Profile Image</label>
                                <input accept="image/*" class="form-control" asp-for="ProfilePhoto" />
                            </div>

                            <div asp-validation-summary="ModelOnly"></div>

                            <button asp-controller="Profile" asp-action="UpdateProfile" class="btn btn-primary w-100">Save Changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0p7XjFvJ8Op+e8F5gfeh6Z8iFsh9t0D12tDqFSS+kADMi6sb" crossorigin="anonymous"></script>
</body>
</html>

