@model List<Brand>
@{
    ViewData["Title"] = "Brand";
}

<div class="card shadow mb-4">
    <div style="display:flex; justify-content: space-between" class="card-header py-3">
        <h6 style="align-self:center" class="m-0 font-weight-bold text-primary">Brands Table</h6>
        <div>
            <a class="btn btn-primary" asp-controller="Brand" asp-action="Create">Create</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Logo</th>
                        <th>Name</th>
                        <th colspan="3">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                    {
                        <tr>
                            <td>@data.Id</td>
                            <td><img width="80px" src="~/imgs/brands/@data.LogoUrl" /></td>
                            <td>@data.Name</td>
                            <td><a class="btn btn-success" href="/Admin/Brand/Update/@data.Id">Update</a></td>
                            <td><a class="btn btn-danger" href="/Admin/Brand/Delete/@data.Id">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


