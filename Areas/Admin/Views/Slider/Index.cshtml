@model List<Slider>
@{
    ViewData["Title"] = "Slider";
}

<div class="card shadow mb-4">
    <div style="display:flex; justify-content: space-between" class="card-header py-3">
        <h6 style="align-self:center" class="m-0 font-weight-bold text-primary">Slider Table</h6>
        <div>
            <a class="btn btn-primary" asp-controller="Slider" asp-action="Create">Create</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Subtitle</th>
                        <th>Link</th>
                        <th colspan="3">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                    { 
                        <tr>
                            <td>@data.Id</td>
                            <td><img width="80px" src="~/imgs/sliders/@data.ImageUrl" /></td>
                            <td>@data.Title</td>
                            <td>@data.Subtitle</td>
                            <td>@data.Link</td>
                            <td><a class="btn btn-success" href="/Admin/Slider/Update/@data.Id">Update</a></td>
                            <td><a class="btn btn-danger" href="/Admin/Slider/Delete/@data.Id">Delete</a></td>
                            @if (data.IsDeleted)
                            {
                                <td><a class="btn btn-warning" href="/Admin/Slider/Hide/@data.Id">Show</a></td>
                            }
                            @if (!data.IsDeleted)
                            {
                                <td><a class="btn btn-warning" href="/Admin/Slider/Hide/@data.Id">Hide</a></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
